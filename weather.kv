<StartPage>:
    id: start
    city: city_input
    FloatLayout:
        BackgroundColor:
            background_color: 0.33, 0.28, 0.44, 1
        CanvasWidget:
            size_hint: (0.95, 0.95)
            pos_hint: {'x': 0.025, 'y':0.025}
        Image:
            source: 'images\DV_logo.png'
            pos_hint: {'x': 0, 'y':0.2}
            size: self.texture_size
        BoxLayout:
            orientation: "vertical"
            size_hint: (0.6, None)
            pos_hint: {'x': 0.2, 'y':0.2}
            height: 70
            spacing: 2
            TextInput:
                id: city_input
                multiline: False
                text: 'Enter city name'
                background_color: 0.87, 1, 0.97, 1
                font_size: 18
                halign: 'center'
                on_text_validate:
                    root.submit_city()
                on_touch_down: root.delete_prompt()
            Button:
                on_release:
                    root.manager.transition.direction = 'left'
                    if root.ids.city_input.text != 'Enter city name': \
                    root.submit_city()
                text: 'Enter'
                background_normal: ''
                background_color: 0.46, 0.37, 0.26, 1
                font_size: 18


<RV>:
    viewclass: 'CityButton'
    scroll_type: ['content']
    do_scroll_y: True
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint: 0.8, None
        height: self.minimum_height
        orientation: 'vertical'
        spacing: 5

<CityButton>:
    background_normal: ''
    background_color: 0.7, 0.36, 0.20, 1
    font_size: 18

<RVPage>:
    FloatLayout:
        BackgroundColor:
            background_color: 0.33, 0.28, 0.44, 1
        CanvasWidget:
            size_hint: (0.95, 0.95)
            pos_hint: {'x': 0.025, 'y':0.025}
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint: (0.85, 0.85)
            pos_hint: {'x': 0.075, 'y':0.075}
            RV:
                id: search_res
                pos_hint: {'x': 0.1}
            Button:
                text: 'New search'
                size_hint: None, None
                font_size: 18
                size: 150, 50
                background_normal: ''
                background_color: 0.46, 0.37, 0.26, 1
                on_release:
                    root.manager.current = 'start'
                    root.manager.transition.direction = 'right'

<InfoPage>:
    FloatLayout:
        BackgroundColor:
            background_color: 0.33, 0.28, 0.44, 1
        CanvasWidget:
            size_hint: (0.95, 0.95)
            pos_hint: {'x': 0.025, 'y':0.025}
        BoxLayout:
            orientation: "vertical"
            Label:
                id: city
            Label:
                id: status
            Button:
                text: 'New search'
                font_size: 18
                size_hint: None, None
                size: 150, 50
                background_normal: ''
                background_color: 0.46, 0.37, 0.26, 1
                on_release:
                    root.manager.current = 'start'
                    root.manager.transition.direction = 'right'

<BackgroundColor@Widget>
    background_color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 1

<CanvasWidget@Widget>:
    canvas:
        Color:
            rgba: 0.38, 0.56, 0.76, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
