<PageManager>:
    StartPage:
        name: 'start'
    CitySearchPage:
        name: 'search_results'

<StartPage>:
    city: city_input
    FloatLayout:
        BackgroundColor:
            background_color: 0.7, 1, 0.51, 0.4
        BackgroundLabel:
            text: "Dali Vali"
            pos_hint: {'x': 0.16, 'y':0.65}
            size_hint: (0.68, 0.25)
            background_color: 0.5, 0.1, 0.1, 1
            font_size: 32
        TextInput:
            id: city_input
            multiline: False
            size_hint: (0.6, None)
            text: 'Enter city name'
            height: 30
            pos_hint: {'x': 0.2, 'y':0.25}
            on_text_validate: root.submit_city()
            on_text_validate: root.manager.current = 'search_results'
            on_touch_down: root.delete_prompt()

<CitySearchPage>:


<BackgroundColor@Widget>
    background_color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 1
