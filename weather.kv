<StartPage>:
    id: start
    city: city_input
    FloatLayout:
        BackgroundColor:
            background_color: 0.2, 0.2, 0.8, 1
        Image:
            source: 'images\DV_logo.png'
            pos_hint: {'x': 0, 'y':0.2}
            size: self.texture_size
        BoxLayout:
            orientation: "vertical"
            size_hint: (0.6, None)
            pos_hint: {'x': 0.2, 'y':0.25}
            height: 70
            spacing: 2
            TextInput:
                id: city_input
                multiline: False
                text: 'Enter city name'
                font_size: 20
                halign: 'center'
                on_text_validate:
                    root.submit_city()
                on_touch_down: root.delete_prompt()
            Button:
                on_release:
                    if root.ids.city_input.text != 'Enter city name': \
                    root.submit_city()
                text: 'Enter'
                background_normal: ''
                background_color: 0.2, 0.6, 0.2, 1
                font_size: 20


<RV>:
    viewclass: 'CityButton'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint: 0.8, None
        height: self.minimum_height
        orientation: 'vertical'
        spacing: 5

<CityButton>:
    background_normal: ''
    background_color: 0.5, 0.1, 0.1, 1

<RVPage>:
    BoxLayout:
        orientation: "vertical"
        RV:
            id: search_res
            pos_hint: {'x': 0.1}
        Button:
            text: 'New search'
            size_hint: None, None
            size: 150, 50
            on_release: root.manager.current = root.manager.previous()

<InfoPage>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id: city
        Label:
            id: status
        Button:
            text: 'New search'
            size_hint: None, None
            size: 150, 50
            on_release: root.manager.current = 'start'

<BackgroundColor@Widget>
    background_color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 1
