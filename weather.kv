<StartPage>:
    id: start
    city: city_input
    FloatLayout:
        BackgroundColor:
            background_color: 0.7, 1, 0.51, 0.4
        BackgroundLabel:
            text: "Dali Vali"
            pos_hint: {'x': 0.16, 'y':0.65}
            size_hint: (0.68, 0.25)
            background_color: 0.5, 0.1, 0.1, 1
            font_size: 32
        TextInput:
            id: city_input
            multiline: False
            size_hint: (0.6, None)
            text: 'Enter city name'
            height: 30
            pos_hint: {'x': 0.2, 'y':0.25}
            on_text_validate:
                root.submit_city()
                root.manager.current = root.manager.next()
            on_touch_down: root.delete_prompt()

<RV>:
    viewclass: 'CityButton'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint: 0.8, None
        height: self.minimum_height
        orientation: 'vertical'
        spacing: 5

<CityButton>:
    background_normal: ''
    background_color: 0.5, 0.1, 0.1, 1

<RVPage>:
    BoxLayout:
        orientation: "vertical"
        RV:
            id: search_res
            pos_hint: {'x': 0.1}
        Button:
            text: 'New search'
            size_hint: None, None
            size: 150, 50
            on_release: root.manager.current = root.manager.previous()

<InfoPage>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id: city
        Label:
            id: status
        Button:
            text: 'New search'
            size_hint: None, None
            size: 150, 50
            on_release: root.manager.current = 'start'

<BackgroundColor@Widget>
    background_color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 1
